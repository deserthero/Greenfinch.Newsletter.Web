@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model List<Greenfinch.Newsletter.Web.MVC.ViewModels.SubscriberViewModel>
@{
    ViewBag.Title = Localizer["Title"];
}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Heared</th>
                <th scope="col">ReasonForSignup</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscriber in Model)
            {
                <tr>
                    <td>@subscriber.Email</td>
                    <td>@subscriber.HeardFrom</td>
                    <td>@subscriber.ReasonForSignup</td>
                </tr>
            }

        </tbody>
    </table>
</div>